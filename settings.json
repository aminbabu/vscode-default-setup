{
  // editor
  "editor.fontFamily": "'Operator Mono Lig', 'JetBrains Mono','FiraCode Nerd Font', monospace",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.lineHeight": 30,
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "keyword"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // default bracket pair colorizer
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  // auto rename tag
  "editor.linkedEditing": true,
  // cursor
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "expand",
  // workbench
  "workbench.colorTheme": "Learn with Sumit - Vintage",
  "workbench.iconTheme": "material-icon-theme",
  // terminal
  "terminal.integrated.fontFamily": "'FiraMono Nerd Font', 'FiraCode NF', 'Operator Mono Lig'"
}
